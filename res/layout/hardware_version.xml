<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@android:color/white">
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
			android:orientation="vertical">

	        <TextView
	            android:id="@+id/hw_variant_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
				android:text="@string/hw_variant"
				style="@style/hardware_version"
				/>

	        <TextView
	            android:id="@+id/hw_variant_info"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
				style="@style/hardware_version"
				/>
	        </LinearLayout>

	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#8A8A8A" />

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
	            android:id="@+id/bands_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
				android:text="@string/bands"
				style="@style/hardware_version"
				/>

	        <TextView
	            android:id="@+id/bands_info"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
				style="@style/hardware_version"
				/>
	    </LinearLayout>

	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#8A8A8A" />

	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >

	        <TextView
	            android:id="@+id/hardware_flash_info"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="15dp"
	            android:layout_marginTop="5dp"
	            android:layout_below="@+id/hardware_flash_title"
	            android:layout_alignParentLeft="true"
	            android:textColor="#0000FF" />

	        <TextView
	            android:id="@+id/hardware_flash_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:text="@string/hd_flash_title"
	            android:layout_marginLeft="5dp"
	             android:layout_marginTop="5dp"
	            android:textColor="#0000FF"
	            android:textSize="16sp" />
	    </RelativeLayout>

	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#8A8A8A" />

	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="80dp" >

	        <TextView
	            android:id="@+id/hardware_tp_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:layout_marginLeft="5dp"
	            android:layout_marginTop="5dp"
	            android:text="@string/hd_tp_title"
	            android:textColor="#0000FF"
	            android:textSize="16sp" />

	        <TextView
	            android:id="@+id/hardware_tp_info"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBaseline="@+id/hardware_tp_title"
	            android:layout_alignBottom="@+id/hardware_tp_title"
	            android:layout_marginLeft="5dp"
	            android:layout_toRightOf="@+id/hardware_tp_title"
	            android:textColor="#0000FF" />
	    </RelativeLayout>

	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#8A8A8A" />

	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="50dp" >

	        <TextView
	            android:id="@+id/hardware_front_camera_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="5dp"
	            android:text="@string/hd_front_camera_title"
	            android:textColor="#0000FF"
	            android:textSize="16sp" />

	        <TextView
	            android:id="@+id/hardware_front_camera_info"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBaseline="@+id/hardware_front_camera_title"
	            android:layout_alignBottom="@+id/hardware_front_camera_title"
	            android:layout_marginLeft="5dp"
	            android:layout_toRightOf="@+id/hardware_front_camera_title"
	            android:textColor="#0000FF" />
	    </RelativeLayout>

	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#8A8A8A" />

	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="50dp" >

	        <TextView
	            android:id="@+id/hardware_back_camera_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="5dp"
	            android:text="@string/hd_back_camera_title"
	            android:textColor="#0000FF"
	            android:textSize="16sp" />

	        <TextView
	            android:id="@+id/hardware_back_camera_info"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBaseline="@+id/hardware_back_camera_title"
	            android:layout_alignBottom="@+id/hardware_back_camera_title"
	            android:layout_marginLeft="5dp"
	            android:layout_toRightOf="@+id/hardware_back_camera_title"
	            android:textColor="#0000FF" />
	    </RelativeLayout>

	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#8A8A8A" />

	   <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="50dp" >

	        <TextView
	            android:id="@+id/version_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#0000FF"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="5dp"
	            android:text="@string/cust_build_version_title"
	            android:textSize="16sp" />

	        <TextView
	            android:id="@+id/build_version"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBaseline="@+id/version_title"
	            android:layout_alignBottom="@+id/version_title"
	            android:layout_marginLeft="5dp"
	            android:layout_toRightOf="@+id/version_title"
	            android:textColor="#0000FF" />
	            
	    </RelativeLayout>

	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#8A8A8A" />

	   	<RelativeLayout
	        android:id="@+id/fingerprint_ic_layout"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:visibility="gone">

	        <TextView
	            android:id="@+id/fingerprint_ic_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#0000FF"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="5dp"
	            android:text="@string/fingerprint_ic_title"
	            android:textSize="16sp" />

	        <TextView
	            android:id="@+id/fingerprint_ic_content"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBaseline="@+id/fingerprint_ic_title"
	            android:layout_alignBottom="@+id/fingerprint_ic_title"
	            android:layout_marginLeft="5dp"
	            android:layout_toRightOf="@+id/fingerprint_ic_title"
	            android:textColor="#0000FF" />
	            
	    </RelativeLayout>
	    
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#8A8A8A" />

	    </LinearLayout>
</ScrollView>