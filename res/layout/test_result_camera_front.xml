<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	        <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <SurfaceView
            android:id="@+id/previewSV"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </FrameLayout>
         <ImageView
        android:id="@+id/btn_capture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:src="@drawable/selector_light" />
        <ImageView
        android:id="@+id/btn_capturer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:src="@drawable/btn_shutter_photo" />
        
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_alignParentTop="true"
    android:layout_above="@+id/RV_button"
    
    >
    
 <!--    <SurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
     -->
    <!-- 
     <TextView 
         android:id="@+id/tv_shanguang"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="@string/msg_shanguang"
         android:textSize="20dip"
         /> -->
     <TextView 
         android:id="@+id/tv_shexiang"
         android:layout_below="@+id/tv_shanguang"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="@string/msg_shexiang"
         android:visibility="gone"
         android:textSize="20dip"
         />
     
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RV_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <Button
            android:id="@+id/Button_Success"
            android:layout_width="150dip"
            android:layout_height="60dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bk_true"
            android:textSize="25dip"
            android:text="@string/Button_Status_Success" />

        <Button
            android:id="@+id/Button_Fail"
            android:layout_width="150dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bk_fail"
            android:textSize="25dip"
            android:text="@string/Button_Status_Fail" />
    </RelativeLayout>

</RelativeLayout>