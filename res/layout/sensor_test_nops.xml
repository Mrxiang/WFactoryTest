		        android:id="@+id/RL_xyz_icon"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@+id/linearLayout1" >
			    <ImageView
			        android:id="@+id/gsensor_orientation_left"
			        android:layout_width="wrap_content"
			        android:layout_weight="1"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:src="@drawable/g_sensor_orientation_left"
			        android:layout_below="@+id/gsensor_orientation_up"
			        android:visibility="invisible"/>
			    <ImageView
			        android:layout_width="wrap_content"
			        android:layout_weight="1"
			        android:layout_height="wrap_content"
			        android:src="@drawable/g_sensor_orientation_right"
			        android:visibility="invisible"/>
			    <ImageView
			        android:id="@+id/gsensor_orientation_right"
			        android:layout_width="wrap_content"
			        android:layout_weight="1"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:src="@drawable/g_sensor_orientation_right"
			        android:layout_below="@+id/gsensor_orientation_up"
			        android:visibility="invisible"/>
			    </LinearLayout>
	    <ImageView
	        android:id="@+id/gsensor_orientation_down"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:src="@drawable/g_sensor_orientation_down"
	        android:layout_below="@+id/gsensor_orientation_left"
	        android:layout_gravity="center"
	        android:visibility="invisible"/>
    </LinearLayout>
