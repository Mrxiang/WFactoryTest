	  <Button
		android:id="@+id/Button_Replay"
		android:layout_width="150dip"
		android:layout_height="60dip"
		android:textSize="25dip"
		android:text="@string/Button_replay" 
		android:layout_centerInParent="true"
		/>
	<Button
		android:id="@+id/Button_reconding"
		android:layout_width="150dip"
		android:layout_height="60dip"
		android:textSize="25dip"
		android:text="@string/Button_reconding" 
		android:layout_below="@id/Button_Replay"
		android:layout_alignLeft="@id/Button_Replay"
		/>

			
			
    <RelativeLayout
        android:id="@+id/RV_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <Button
            android:id="@+id/Button_Success"
            android:layout_width="150dip"
            android:layout_height="60dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bk_true"
            android:textSize="25dip"
            android:text="@string/Button_Status_Success" />

        <Button
            android:id="@+id/Button_Fail"
            android:layout_width="150dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bk_fail"
            android:textSize="25dip"
            android:text="@string/Button_Status_Fail" />
    </RelativeLayout>
